<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gender Spinner -->
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- MasterCategory Spinner -->
        <Spinner
            android:id="@+id/spinner_master_category"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- SubCategory Spinner -->
        <Spinner
            android:id="@+id/spinner_sub_category"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- ArticleType Spinner -->
        <Spinner
            android:id="@+id/spinner_article_type"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- BaseColor Spinner -->
        <Spinner
            android:id="@+id/spinner_base_color"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Season Spinner -->
        <Spinner
            android:id="@+id/spinner_season"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Usage Spinner -->
        <Spinner
            android:id="@+id/spinner_usage"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Price Range -->
        <EditText
            android:id="@+id/edit_text_min_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter the lowest price"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_text_max_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter the highest price"
            android:inputType="number" />

        <!-- Search Button -->
        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Search" />
        <!-- Cancel Button -->
        <Button
            android:id="@+id/button_return"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel" />
    </LinearLayout>
</ScrollView>
